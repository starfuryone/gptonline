{
  "name": "saas-ai-functions-backend",
  "version": "1.0.0",
  "description": "Backend API for SaaS AI Functions Google Sheets integration",
  "main": "backend-server.js",
  "scripts": {
    "start": "node backend-server.js",
    "dev": "nodemon backend-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t saas-ai-functions .",
    "docker:run": "docker run -p 3000:3000 saas-ai-functions"
  },
  "keywords": [
    "saas",
    "ai",
    "google-sheets",
    "stripe",
    "openai",
    "gpt",
    "api"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "openai": "^3.3.0",
    "stripe": "^12.12.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "handlebars": "^4.7.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.4.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-company/saas-ai-functions-backend"
  },
  "bugs": {
    "url": "https://github.com/your-company/saas-ai-functions-backend/issues"
  },
  "homepage": "https://github.com/your-company/saas-ai-functions-backend#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}

