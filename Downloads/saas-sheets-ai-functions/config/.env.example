# Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/saas_ai_functions
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_ai_functions
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRICE_ID_STARTER=price_your-starter-price-id
STRIPE_PRICE_ID_PROFESSIONAL=price_your-professional-price-id
STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-price-id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=AI Functions

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_WINDOW_MS=60000
RATE_LIMIT_AI_MAX_REQUESTS=20

# Credit Configuration
FREE_TRIAL_CREDITS=10
CREDIT_COST_CLEAN=1
CREDIT_COST_SEO=2
CREDIT_COST_SUMMARIZE=1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=*
TRUST_PROXY=false

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
ENABLE_TEAM_FEATURES=true
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,txt,json

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Development Configuration
DEBUG=saas-ai-functions:*
MOCK_STRIPE=false
MOCK_OPENAI=false
SEED_DATABASE=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DATABASE_URL=postgresql://prod_user:prod_password@prod-db-host:5432/saas_ai_functions_prod
# REDIS_URL=redis://prod-redis-host:6379
# FRONTEND_URL=https://your-production-domain.com
# CORS_ORIGIN=https://your-production-domain.com
# TRUST_PROXY=true
# LOG_LEVEL=warn

